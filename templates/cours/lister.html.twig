{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}
{% block body %}
<div class="bg-dash-dark-2 py-4">
    <div class="container-fluid">
        <h2 class="h5 mb-0">Cours</h2>
    </div>
</div>

<div class="container-fluid py-2">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0 py-3 px-0">
            <li class="breadcrumb-item"><a href="{{ path('coursLister') }}">Cours</a></li>
            <li class="breadcrumb-item active" aria-current="page">Liste</li>
        </ol>
    </nav>
</div>
        <section class="tables py-0">
            <div class="container-fluid">
                <div class="row gy-4">
                    <div class="col-xxl-11">
                        <div class="card mb-0">
                            <div class="card-header">
                                <h3 class="h4 mb-0"></h3>
                            </div>
                            <div class="card-body pt-0">
                                <div class="table-responsive">
                                    <table class="table mb-0 table-striped table-hover">
    <tr>
        <th>Libellé</th>
        <th>Jour</th>
        <th>Age minimum</th>
        <th>Age maximum</th>
        <th>Heure de début</th>
        <th>Heure de fin</th>
        <th></th>
        <th>Actions</th>
        <th></th>
    </tr>

    {% for cours in pCours %}
        <tr>
            <td><a href="{{ path('coursConsulter', { 'id': cours.id }) }}">{{ cours.libelle }}</a></td>
            <td>{{ cours.jour.libelle }}</td>
            <td>{{ cours.ageMini }}</td>
            <td>{{ cours.ageMaxi }}</td>
            <td>{{ cours.heureDebut|date('H:i:s') }}</td>
            <td>{{ cours.heureFin|date('H:i:s') }}</td>
            <td>
                <a href="{{ path('coursConsulter', { 'id': cours.id }) }}">
                    <button type="button" class="btn btn-outline-success">
                        <img alt="boutonAjouter" src="/23JPLGO/public/assets/img/consultIcon.png" width="30px" height="30px">
                    </button>
                </a>
            </td>
            <td>
                <a href="{{ path('coursModifier', { 'id': cours.id }) }}">
                    <button type="button" class="btn btn-outline-secondary">
                        <img alt="boutonAjouter" src="/23JPLGO/public/assets/img/editIcon.png" width="30px" height="30px">
                    </button>
                </a>
            </td>
            <td>
                <a href="{{ path('coursSupprimer', { 'id': cours.id }) }}" onclick="return confirm('Êtes vous sûr de vouloir supprimer ce cours');">
                    <button type="button" class="btn btn-outline-danger">
                        <img alt="boutonAjouter" src="/23JPLGO/public/assets/img/deleteIcon.png" width="30px" height="30px">
                    </button>
                </a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="7">Aucun cours n'a été trouvé.</td>
        </tr>
    {% endfor %}
</table>
    </div>
{% endblock %}
