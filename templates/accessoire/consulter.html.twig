{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="bg-dash-dark-2 py-4">
        <div class="container-fluid">
            <h2 class="h5 mb-0">Accessoires</h2>
        </div>
    </div>
    <div class="container-fluid py-2">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 py-3 px-0">
                <li class="breadcrumb-item"><a href="{{ path('accessoireLister') }}">Accessoires</a></li>
                <li class="breadcrumb-item active" aria-current="page">Accessoire {{ accessoire.id }}</li>
            </ol>
        </nav>
    </div>
        <section class="tables py-0">
            <div class="container-fluid">
                <div class="row gy-4">
                    <div class="col-xxl-12">
                        <div class="card mb-0">
                            <div class="card-header">
                                <h3 class="h4 mb-0">Consultation de l'accessoire {{ accessoire.libelle }}</h3>
                            </div>
                            <div class="card-body pt-0">
                                <div class="table-responsive">
                                    <table class="table mb-0 table-striped table-hover">
                                        <tr><td>ID : </td><td>{{ accessoire.id }}</td></tr>
                                        <tr><td>Libellé : </td><td>{{ accessoire.libelle }}</td></tr>
                                    </table>
                                </div>



                                <!-- Button to go back to the list of accessories -->
                                <a href="{{ path('accessoireLister') }}">Retour à la liste des accessoires</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
