{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="page-content">
        <h2>LISTE DES COULEURS</h2>

        <section class="tables py-0">
            <div class="container-fluid">
                <div class="row gy-4">
                    <div class="col-xxl-11">
                        <div class="card mb-0">
                            <div class="card-header">
                                <h3 class="h4 mb-0">Liste des couleurs</h3>
                            </div>
                            <div class="card-body pt-0">
                                <div class="table-responsive">
                                    <table class="table mb-0 table-striped table-hover">
                                        <tr>
                                            <th>ID</th>
                                            <th>Nom</th>
                                            <th></th>
                                            <th>Actions</th>
                                            <th></th>
                                        </tr>

                                        <!-- Modify the loop to display color details as before -->
                                        {% for couleur in couleurs %}
                                            <tr>
                                                <td>{{ couleur.id }}</td>
                                                <td>{{ couleur.nom }}</td>
                                                <td>
                                                    <a href="{{ path('couleurConsulter', { 'id': couleur.id }) }}">
                                                        <button type="button" class="btn btn-outline-success">
                                                            <img alt="consultIcon" src="/23JPLGO/public/assets/img/consultIcon.png" width="30px" height="30px">
                                                        </button>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="{{ path('couleurModifier', { 'id': couleur.id }) }}">
                                                        <button type="button" class="btn btn-outline-secondary">
                                                            <img alt="boutonAjouter" src="/23JPLGO/public/assets/img/editIcon.png" width="30px" height="30px">
                                                        </button>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="{{ path('couleurSupprimer', { 'id': couleur.id }) }}" onclick="return confirm('Êtes vous sûr de vouloir supprimer');">
                                                        <button type="button" class="btn btn-outline-danger">
                                                            <img alt="boutonAjouter" src="/23JPLGO/public/assets/img/deleteIcon.png" width="30px" height="30px">
                                                        </button>
                                                    </a>
                                                </td>

                                            </tr>
                                        {% else %}
                                            <!-- Display no colors found message -->
                                            <tr>
                                                <td colspan="3">Aucune couleur n'a été trouvée.</td>
                                            </tr>
                                        {% endfor %}
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}