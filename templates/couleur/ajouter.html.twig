{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <br>
        <section class="pt-0">
            <div class="container-fluid">
                <div class="row gy-4">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="h4 mb-0">Ajouter une couleur</h3>
                            </div>
                            <div class="card-body pt-0">
                                <form method="post" action="{{ path('couleurAjouter') }}">
                                    {{ form_start(form) }}
                                    {{ form_widget(form) }}
                                    {{ form_end(form) }}
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}