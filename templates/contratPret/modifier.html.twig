{# templates/contratPret/modifier.html.twig #}
{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <section class="pt-0">
        <div class="container-fluid">
            <div class="row gy-4">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">

                            <h3 class="h4 mb-0">Modifier un contrat de prêt</h3>

                        </div>
                        <div class="card-body pt-0">
                            <form action="{{ path('contratPretModifier', { 'id': contratPret.id }) }}" method="post">
                                {{ form_start(form) }}
                                <div class="mb-3">
                                    <label class="form-label" for="exampleInputEmail1">Nom de l'élève</label>
                                    {{ form_widget(form.eleve) }}
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="exampleInputPassword1">Instrument emprunté</label>
                                    {{ form_widget(form.instrument) }}
                                </div>

                                <div class="mb-4"></div>
                                <div class="row">
                                    <div class="mb-3">
                                        <label class="form-label" for="exampleInputPassword1">Attestation du contrat</label>
                                        {{ form_widget(form.attestationAssurance) }}
                                        <div class="form-text">Sélectionnez un document.</div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="exampleInputPassword1">Etat de départ</label>
                                    {{ form_widget(form.etatDetailleDebut) }}
                                    <div class="form-text">Entrez une description extensive.</div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="exampleInputPassword1">Etat de retour</label>
                                    {{ form_widget(form.etatDetailleRetour) }}
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="exampleInputPassword1">Date de début</label>
                                    {{ form_widget(form.dateDebut) }}
                                    <div class="form-text">La date doit être supérieure à la date de fin.</div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="exampleInputPassword1">Date de retour</label>
                                    {{ form_widget(form.dateFin) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_widget(form.save, { 'label': 'Modifier' }) }}
                                </div>
                                {{ form_end(form) }}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
{% block footer %}
    {{ parent() }}

{% endblock %}