<!-- templates/instrument/lister.html.twig -->

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Liste des Instruments{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
</head>
<body>
{% block body %}

    <h2>LISTE DES INSTRUMENTS</h2>

    <!-- Search Bar -->
    <form method="get" action="{{ path('instrumentLister') }}">
        <label for="search">Rechercher :</label>
        <input type="text" id="search" name="search" value="{{ app.request.query.get('search') }}">
        <button type="submit">Rechercher</button>
    </form>

    <table>
        <tr>
            <th>Nom de l'instrument</th>
            <th>Marque</th>
            <th>Type d'Instrument</th>
            <th>Classe d'Instrument</th>
            <th>Actions</th>
        </tr>
        {% for instrument in pInstruments %}
            <tr>
                <td><a href="{{ path('instrumentConsulter', { 'id': instrument.id }) }}">{{ instrument.NumSerie }}</a></td>
                <td>{{ instrument.marque.libelle }}</td>
                <td>{{ instrument.TypeInstrument.libelle }}</td>
                <td>{{ instrument.TypeInstrument.ClasseInstrument.libelle }}</td>
                <td>
                    <a href="{{ path('instrumentModifier', { 'id': instrument.id }) }}">Modifier</a>
                    <br>
                    <a href="{{ path('instrumentSupprimer', { 'id': instrument.id }) }}" onclick="return confirm('Are you sure you want to delete this instrument?')">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun instrument n'a été trouvé.</td>
            </tr>
        {% endfor %}
        <tr>
            <td colspan="5">
                <a href="{{ path('instrumentAjouter') }}">Ajouter un instrument</a>
            </td>
        </tr>
    </table>

    {% if app.request.query.get('search') is not null %}
        <p>
            <a href="{{ path('instrumentLister') }}">Revenir à la liste complète</a>
        </p>
    {% endif %}

{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
