<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
</head>
<body>
{% block body %}

    LISTE DES INSTRUMENTS</br>
    <table>
        {% for instrument in pInstruments %}
            <tr>
                <td><a href="{{ path('instrumentConsulter', { 'id': instrument.id }) }}">{{ instrument.NumSerie }}</a></td>
                <td>{{ instrument.marque.libelle }}</td>
                <td>{{ instrument.TypeInstrument.libelle }}</td>
                <td>{{ instrument.TypeInstrument.ClasseInstrument.libelle }}</td>
                <td>
                    <a href="{{ path('instrumentModifier', { 'id': instrument.id }) }}">Modifier</a>
                </td>
                <td>
                    <a href="{{ path('instrumentSupprimer', { 'id': instrument.id }) }}" onclick="return confirm('Are you sure you want to delete this instrument?')">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td>Aucun instrument n'a été trouvé.</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
