{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <div class="bg-dash-dark-2 py-4">
        <div class="container-fluid">
            <h2 class="h5 mb-0">Inscriptions</h2>
        </div>
    </div>

    <div class="container-fluid py-2">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 py-3 px-0">
                <li class="breadcrumb-item"><a href="{{ path('inscriptionLister') }}">Inscriptions</a></li>
                <li class="breadcrumb-item active" aria-current="page">Liste</li>
            </ol>
        </nav>
    </div>
    <section class="tables py-0">
    <div class="container-fluid">
    <div class="row gy-4">
    <div class="col-xxl-11">
    <div class="card mb-0">
    <div class="card-header">
        <h3 class="h4 mb-0"></h3>
    </div>
    <div class="card-body pt-0">
    <div class="table-responsive">
                                    <table class="table mb-0 table-striped table-hover">

    <tr>
        <th>Date d'Inscription</th>
        <th>Eleve</th>
        <th>Cours</th>
    </tr>

    {% for inscription in pInscription %}
        <tr>
            <td><a href="{{ path('inscriptionConsulter', { 'id': inscription.id }) }}"></a></td>
            <td>{{ inscription.date_inscription }}</td>
            <td>{{ inscription.eleve_id }}</td>
            <td>{{ inscription.cours_id }}</td>
            <td>
                <a href="{{ path('inscriptionConsulter', { 'id': inscription.id }) }}">
                    <button type="button" class="btn btn-outline-success">
                        <img alt="boutonAjouter" src="/23JPLGO/public/assets/img/consultIcon.png" width="30px" height="30px">
                    </button>
                </a>
            </td>
            <td>
                <a href="{{ path('inscriptionModifier', { 'id': eleve.id }) }}">
                    <button type="button" class="btn btn-outline-secondary">
                        <img alt="boutonAjouter" src="/23JPLGO/public/assets/img/editIcon.png" width="30px" height="30px">
                    </button>
                </a>
            </td>
            <td>
                <a href="{{ path('inscriptionSupprimer', { 'id': eleve.id }) }}" onclick="return confirm('Êtes vous sûr de vouloir supprimer cette inscription');">
                    <button type="button" class="btn btn-outline-danger">
                        <img alt="boutonAjouter" src="/23JPLGO/public/assets/img/deleteIcon.png" width="30px" height="30px">
                    </button>
                </a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="9">Aucune inscription n'a été trouvé.</td>
        </tr>
    {% endfor %}
</table>
    </div>
{% endblock %}