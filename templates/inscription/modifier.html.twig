{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}
{% block body %}

<br>
<section class="pt-0">
    <div class="container-fluid">
        <div class="row gy-4">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="h4 mb-0">Modifier une inscription</h3>
                    </div>
                    <div class="card-body pt-0">
                        <form action="{{ path('inscriptionModifier', { 'id': inscription.id }) }}" method="post">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                <label for="date_inscription">Date de l'Inscription :</label>
                                {{ inscription.dateInscription|date('d-m-y') }}
                            </div>
                            <div class="mb-3">
                                <label for="eleve">El√®ve :</label>
                                {{ inscription.eleve.nom }} {{ inscription.eleve.prenom }}
                            </div>
                            <div class="mb-3">
                                <label for="cours">Cours :</label>
                                {{ inscription.cours.libelle }}
                            </div>
                            <div class="mb-3">
                                {{ form_end(form) }}
                        </form>

{% endblock %}