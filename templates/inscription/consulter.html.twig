{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <div class="bg-dash-dark-2 py-4">
        <div class="container-fluid">
            <h2 class="h5 mb-0">Inscriptions</h2>
        </div>
    </div>
    <div class="container-fluid py-2">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 py-3 px-0">
                <li class="breadcrumb-item"><a href="{{ path('inscriptionLister') }}">Inscriptions</a></li>
                <li class="breadcrumb-item active" aria-current="page">Inscription {{ inscription.id }}</li>
            </ol>
        </nav>
    </div>
    <section class="tables py-0">
    <div class="container-fluid">
    <div class="row gy-4">
    <div class="col-xxl-12">
    <div class="card mb-0">
    <div class="card-header">
        <h3 class="h4 mb-0">Consultation de l'inscription {{ 'n° ' ~ inscription.id }}</h3>
    </div>
    <div class="card-body pt-0">
    <div class="table-responsive">
        <table class="table mb-0 table-striped table-hover">
            <tr>
                <th>
                    Date de l'Inscription :
                </th>
                <td>
                    {{ inscription.dateInscription|date('d-m-y') }}
                </td>
            </tr>
            <tr>
                <th>
                    Elève :
                </th>
                <td>
                    {{ inscription.eleve.nom }} {{ inscription.eleve.prenom }}
                </td>
            </tr>
            <tr>
                <th>
                    Cours :
                </th>
                <td>
                    {{ inscription.cours.libelle }}
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ path('inscriptionModifier', { 'id': inscription.id }) }}">
                        <button type="button" class="btn btn-outline-secondary">
                            <img alt="boutonAjouter" src="/23JPLGO/public/assets/img/editIcon.png" width="30px" height="30px">
                        </button>
                    </a>
                    <a href="{{ path('inscriptionSupprimer', { 'id': inscription.id }) }}" onclick="return confirm('Êtes vous sûr de vouloir supprimer cette inscription ?');">
                        <button type="button" class="btn btn-outline-danger">
                            <img alt="boutonAjouter" src="/23JPLGO/public/assets/img/deleteIcon.png" width="30px" height="30px">
                        </button>
                    </a>
                </td>
            </tr>
        </table>
    </div>
    </div>
    </div>
    </div>
    </div>
    </div>
{% endblock %}
{% block footer %}
{{ parent() }}
{% endblock %}