{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="page-content">
        <section class="tables py-0">
            <div class="container-fluid">
                <div class="row gy-4">
                    <div class="col-xxl-12">
                        <div class="card mb-0">
                            <div class="card-header">
                                <h3 class="h4 mb-0">Consultation de la marque {{ marque.libelle }}</h3>
                            </div>
                            <div class="card-body pt-0">
                                <div class="table-responsive">
                                    <table class="table mb-0 table-striped table-hover">
                                        <tr><td>ID : </td><td>{{ marque.id }}</td></tr>
                                        <tr><td>Nom : </td><td>{{ marque.libelle }}</td></tr>
                                    </table>
                                </div>

                                <div class="card-body pt-0">
                                    <div class="table-responsive">
                                        <table class="table mb-0 table-striped table-sm">
                                            <tr>
                                                <th>ID des Instruments :</th>
                                                <th>Nom des Instruments :</th>
                                            </tr>
                                            {% for instrument in instruments %}
                                                <tr>
                                                    <td>{{ instrument.id }}</td>
                                                    <td>{{ instrument.numSerie }}</td>
                                                </tr>
                                            {% endfor %}
                                        </table>
                                    </div>
                                </div>

                                <!-- Button to go back to the list of brands -->
                                <a href="{{ path('marqueLister') }}">Retour Ã  la liste des marques</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
