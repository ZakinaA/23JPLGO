{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <div class="bg-dash-dark-2 py-4">
        <div class="container-fluid">
            <h2 class="h5 mb-0">Professeur</h2>
        </div>
    </div>

    <div class="container-fluid py-2">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 py-3 px-0">
                <li class="breadcrumb-item"><a href="{{ path('professeurLister') }}">Professeurs</a></li>
                <li class="breadcrumb-item active" aria-current="page">Liste</li>
            </ol>
        </nav>
    </div>
    <section class="tables py-0">
        <div class="container-fluid">
            <div class="row gy-4">
                <div class="col-xxl-11">
                    <div class="card mb-0">
                        <div class="card-header">
                            <h3 class="h4 mb-0"></h3>
                        </div>
                        <div class="card-body pt-0">
                            <div class="table-responsive">
                                <table class="table mb-0 table-striped table-hover">
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Professeur</th>
                                        <th>Instrument</th>
                                        <th></th>
                                        <th>Actions</th>
                                        <th></th>

                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for professeur in professeurs %}
                                        <tr>
                                            <th scope="row">{{ professeur.id }}</th>
                                            <td>{{ professeur.prenom ~ " " ~ professeur.nom }}</td>
                                            <td>
                                                {% for typeInstrument in professeur.typeInstrument %}
                                                    {{ typeInstrument.libelle }}
                                                {% endfor %}
                                            </td>
                                            <td>
                                                <a href="{{ path('professeurConsulter', { 'id': professeur.id }) }}">
                                                    <button type="button" class="btn btn-outline-success">
                                                        <img alt="boutonAjouter" src="/23JPLGO/public/assets/img/consultIcon.png" width="30px" height="30px">
                                                    </button>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="{{ path('professeurModifier', { 'id': professeur.id }) }}">
                                                    <button type="button" class="btn btn-outline-secondary">
                                                        <img alt="boutonAjouter" src="/23JPLGO/public/assets/img/editIcon.png" width="30px" height="30px">
                                                    </button>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="{{ path('professeurSupprimer', { 'id': professeur.id }) }}" onclick="return confirm('Êtes vous sûr de vouloir supprimer ce professeur');">
                                                    <button type="button" class="btn btn-outline-danger">
                                                        <img alt="boutonAjouter" src="/23JPLGO/public/assets/img/deleteIcon.png" width="30px" height="30px">
                                                    </button>
                                                </a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <div class="col-lg-4">
                                            {{ "Aucun professeur n'a été trouvé." }}
                                        </div>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
{% block footer %}
{{ parent() }}
{% endblock %}