
{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="page-content">
        <h5>AJOUTER UNE CLASSE D'INSTRUMENT</h5>

        <section class="pt-0">
            <div class="container-fluid">
                <div class="row gy-4">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="h4 mb-0">Ajouter une classe d'instrument</h3>
                            </div>
                            <div class="card-body pt-0">
                                <form method="post" action="{{ path('classeInstrumentAjouter') }}">
                                    {{ form_start(form) }}

                                    <div class="mb-3">
                                        <label class="form-label" for="libelle">Libellé de la classe d'instrument</label>
                                        {{ form_widget(form.libelle) }}
                                    </div>

                                    <!-- Add other form fields as needed -->

                                    <div class="mb-3">
                                        <label class="form-label" for="instruments">Instruments liés</label>
                                        {{ form_widget(form.instruments, {'attr': {'class': 'form-control', 'multiple': 'multiple'}}) }}
                                    </div>

                                    <div class="mb-3">
                                        <button type="submit">Ajouter</button>
                                    </div>

                                    {{ form_end(form) }}
                                </form>

                                <!-- Add a link to go back to the lister page -->
                                <a href="{{ path('classeInstrumentLister') }}">Voir la liste des classes d'instrument</a>

                                <!-- Add any additional content or scripts as needed -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}
